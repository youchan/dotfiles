[mergetool]
	keepBackup = true
[core]
	excludesfile = /Users/youchan/.gitignore
	editor = nvim
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/1.9.1/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[diff]
    tool = vimdiff
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    co = checkout
    st = status
    tr = log --graph --pretty='format:%C(yellow)%h%Creset %s %Cgreen(%an)%Creset %Cred%d%Creset'
    ln = log --name-status
    l = log -p --stat --reverse --abbrev-commit --decorate --topo-order
    c = commit
    cm = commit -m
    cw = commit -m 'wip'
    ca = commit -a
    rc = rebase --continue
    rs = rebase --skip
    ra = rebase --abort
    s = show --abbrev-commit --decorate
    b = branch -vv
    g = grep -n
    squash = rebase -i --autosquash
    fixup = commit --fixup
    cp = cherry-pick
[push]
	default = simple
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
